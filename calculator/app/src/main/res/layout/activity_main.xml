<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculatertv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="25dp"
        android:hint="Calculation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/resulttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@+id/calculatertv"/>

    <LinearLayout
        android:id="@+id/firstrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/secondrow">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="C"
            android:backgroundTint="@color/red"
            android:textSize="32sp"
            android:layout_marginRight="12dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/obracket"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="("
            android:backgroundTint="@color/Frey"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cbracket"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text=")"
            android:backgroundTint="@color/Frey"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/divide"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="/"
            android:backgroundTint="@color/org"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/thridrow">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="7"
            android:backgroundTint="@color/dark_grey"
            android:textSize="32sp"
            android:layout_marginRight="12dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="8"
            android:backgroundTint="@color/dark_grey"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="9"
            android:backgroundTint="@color/dark_grey"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/multi"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="*"
            android:backgroundTint="@color/org"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/thridrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/fourthrow">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/four"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="4"
            android:backgroundTint="@color/dark_grey"
            android:textSize="32sp"
            android:layout_marginRight="12dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/five"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="5"
            android:backgroundTint="@color/dark_grey"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/six"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="6"
            android:backgroundTint="@color/dark_grey"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="+"
            android:backgroundTint="@color/org"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourthrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/fifthrow"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/one"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="1"
            android:backgroundTint="@color/dark_grey"
            android:textSize="32sp"
            android:layout_marginRight="12dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/two"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="2"
            android:backgroundTint="@color/dark_grey"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/three"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="3"
            android:backgroundTint="@color/dark_grey"
            android:layout_marginEnd="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="-"
            android:backgroundTint="@color/org"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fifthrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ac"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginRight="12dp"
            android:backgroundTint="@color/red"
            android:text="AC"
            android:textSize="18sp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="0"
            android:backgroundTint="@color/Frey"
            android:layout_marginEnd="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dot"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="."
            android:backgroundTint="@color/Frey"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/eql"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="="
            android:backgroundTint="@color/org"
            android:layout_marginRight="12dp"
            android:textSize="32sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>